<?xml version="1.0" encoding="utf-8"?>
<com.lilincpp.bottommenu.ListMenuContentLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical">

    <!--菜单标题-->
    <TextView
        android:id="@+id/ll_bottom_menu_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textColor="#000" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:id="@+id/ll_bottom_menu_tl_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            >
            <!--菜单子项填充-->
        </TableLayout>

    </ScrollView>

</com.lilincpp.bottommenu.ListMenuContentLayout>